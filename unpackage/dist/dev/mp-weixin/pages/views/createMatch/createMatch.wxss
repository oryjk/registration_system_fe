.container {
  display: flex;
  text-align: center;
  flex-direction: column;
  padding-left: 20px;
  padding-right: 20px;
}
.container .form {
  flex-grow: 0;
  /* 默认情况下flex-grow为0，意味着不会基于额外空间增长 */
  flex-shrink: 0;
  /* 防止元素缩小 */
  overflow: auto;
  margin-bottom: 60%;
  /* 如果内容超出容器，则显示滚动条 */
}
.container .form .form-item {
  margin-bottom: 20px;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.container .form .form-item .picker {
  flex: 1;
  padding: 10px;
  margin-left: 10px;
  /* 选择器和文本间距 */
  background-color: #f0f0f0;
  /* 选择器背景色 */
}
.container .form .form-item text {
  width: 40%;
  text-align: left;
}
.container .form .form-item input {
  width: 60%;
  box-sizing: border-box;
  text-align: left;
}
.container .button-container {
  display: flex;
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  padding: 10px;
  justify-content: space-between;
  padding-left: 20px;
  padding-right: 20px;
  /* 居中按钮 */
}
.container .button-container button {
  padding: 0;
  margin: 0;
  color: white;
  border: none;
  border-radius: 5px;
  cursor: pointer;
  width: 100%;
}